{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div class="container">
        	<h1>Vote pour ta saga</h1>

			{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

		    {# Les erreurs générales du formulaire. #}
		    {{ form_errors(form) }}
			<div class="row">
					<div class="form-group col-sm-8">
			      {{ form_label(form.nom, "Ton nom", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
			
			      {{ form_errors(form.nom) }}
			
			      <div class="col-sm-6">
			        {# Génération de l'input. #}
			        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
			      </div>
			    </div>
			    
			    
			    <div class="form-group col-sm-8">
			    
			    {{ form_label(form.nom, "Ton prénom", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
				{{ form_errors(form.prenom) }}
			
			      <div class="col-sm-6">
			        {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
			      </div>
			    </div>
			    <div class="form-group col-sm-8">
			      {{ form_label(form.email, "Ton email", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
					{{ form_errors(form.email) }}
			
			      <div class="col-sm-6">
			        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
			      </div>
			    </div>
			    <div class="form-group col-sm-8">
			    
			    {{ form_label(form.pseudo, "Ton pseudo", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
			      {{ form_errors(form.pseudo) }}
			
			      <div class="col-sm-6">
			        {{ form_widget(form.pseudo, {'attr': {'class': 'form-control'}}) }}
			      </div>
			    </div>
			    
			    <div class="form-group col-sm-8">
			    
			    {{ form_label(form.pseudo, "Ton mot de passe", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
			      {{ form_errors(form.password) }}
			
			      <div class="col-sm-6">
			        {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
			      </div>
			    </div>
			    <div class="form-group col-sm-8">
			    
			    {{ form_label(form.photo, "Ta photo", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
			      {{ form_errors(form.photo) }}
			
			      <div class="col-sm-6">
			        {{ form_widget(form.photo, {'attr': {'class': ''}}) }}
			      </div>
			    </div>
			   <div class="form-group col-sm-8">
			    
			    {{ form_widget(form.inscrire, {'attr': {'class': 'btn btn-primary col-sm-2'}}) }}
			    
			     {# Fermeture de la balise <form> du formulaire HTML #}
  				{{ form_end(form) }}
			    </div>
			    
			</div>
			
		    
			

        </div>
    </div>
{% endblock %}
