{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div class="container">
           <h1>Liste des films</h1>
           
           {% for film in films %}
           
           <article class="panel panel-primary">
			  <div class="panel-heading">
			      <a href="/app_dev.php/film/{{film.id}}">{{ film.titre }}</a>
			  </div>
			  <div class="panel-body">
			  	<div class="col-sm-12">
					  		<div class="col-sm-6">
					  			<p>	Réalisateur : {{ film.realisateur }} </p>
					  			<p>	Année : {{ film.annee }} </p>
					  		</div>
					  			
					  		<div class="col-sm-6">
					  		<p>Moyenne :</p>
					  		<input id="input-2ba" value={{ film.score_avg ? film.score_avg : 0 }} type="number" class="rating" min="0" max="5" step="0.5" data-stars=5 data-symbol="&#xe005;" data-default-caption="{rating} hearts" data-star-captions="{}">
					  		</div>
					  	</div>
			  	
			  </div>
		
		  </article>
		  	{% endfor %}
        </div>
    </div>
{% endblock %}
